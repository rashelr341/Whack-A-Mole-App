<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Level1Activity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/rootRL"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/grass"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/hole1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="123dp"
            app:srcCompat="@drawable/hole" />
        <ImageView
            android:id="@+id/hole2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="143dp"
            android:layout_marginTop="123dp"
            app:srcCompat="@drawable/hole" />
        <ImageView
            android:id="@+id/hole3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="266dp"
            android:layout_marginTop="123dp"
            app:srcCompat="@drawable/hole" />
        <ImageView
            android:id="@+id/hole4"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="348dp"
            app:srcCompat="@drawable/hole" />
        <ImageView
            android:id="@+id/hole5"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="143dp"
            android:layout_marginTop="348dp"
            app:srcCompat="@drawable/hole" />
        <ImageView
            android:id="@+id/hole6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="266dp"
            android:layout_marginTop="348dp"
            app:srcCompat="@drawable/hole" />

    </RelativeLayout>
    <TextView
        android:id="@+id/constantTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/Timer"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:fontFamily="monospace"
        tools:textColor="@android:color/white"
        tools:textSize="24sp" />

    <TextView
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/constantTimer"
        app:layout_constraintStart_toEndOf="@+id/constantTimer"
        tools:fontFamily="monospace"
        tools:textColor="@android:color/white"
        tools:textSize="24sp" />

    <TextView
        android:id="@+id/constantScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="16dp"
        android:text="@string/Score"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/timer"
        app:layout_constraintTop_toTopOf="parent"
        tools:fontFamily="monospace"
        tools:textColor="@android:color/white"
        tools:textSize="24sp" />

    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="0"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/constantScore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constantScore"
        tools:fontFamily="monospace"
        tools:textColor="@android:color/white"
        tools:textSize="24sp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:stretchColumns="0,1,2"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="parent">

        <TableRow
            android:layout_width="0dp"
            android:layout_height="129dp"
            android:layout_margin="1dp"
            android:layout_weight="1">
            <TableRow
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_margin="1dp"
                android:layout_weight="1">
            </TableRow>
        </TableRow>

        <TableRow
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/mole1"
                android:layout_width="40dp"
                android:layout_height="180dp"
                android:visibility="invisible"
                android:clickable="true"
                app:srcCompat="@drawable/mole" />

            <ImageView
                android:id="@+id/mole2"
                android:layout_width="40dp"
                android:layout_height="180dp"
                android:visibility="invisible"
                android:clickable="true"
                app:srcCompat="@drawable/mole" />

            <ImageView
                android:id="@+id/mole3"
                android:layout_width="40dp"
                android:layout_height="180dp"
                android:visibility="invisible"
                android:clickable="true"
                app:srcCompat="@drawable/mole" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:gravity="center" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_margin="1dp"
                android:gravity="center"
                android:text=""
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />
        </TableRow>

        <TableRow

            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="1dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/mole4"
                android:layout_width="40dp"
                android:layout_height="180dp"
                android:visibility="invisible"
                android:clickable="true"
                app:srcCompat="@drawable/mole" />

            <ImageView
                android:id="@+id/mole5"
                android:layout_width="40dp"
                android:layout_height="180dp"
                android:visibility="invisible"
                android:clickable="true"
                app:srcCompat="@drawable/mole" />

            <ImageView
                android:id="@+id/mole6"
                android:layout_width="40dp"
                android:layout_height="180dp"
                android:visibility="invisible"
                android:clickable="true"
                app:srcCompat="@drawable/mole" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_column="0"
                android:layout_margin="1dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="1"
                android:layout_margin="1dp"

                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_column="2"
                android:layout_margin="1dp"

                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge" />
        </TableRow>


    </TableLayout>

</android.support.constraint.ConstraintLayout>